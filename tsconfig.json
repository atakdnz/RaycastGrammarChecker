{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2022",
        "lib": [
            "es2022",
            "dom"
        ],
        "sourceMap": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ]
}